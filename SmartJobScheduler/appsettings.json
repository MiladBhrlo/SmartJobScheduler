{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "JobScheduler": {
    "Jobs": [
      {
        "Name": "DailyReportJob",
        "ScheduleType": "Simple",
        "IsEnabled": true,
        "Hour": 14,
        "Minute": 30,
        "Period": 1440,
        "StartImmediately": false
      },
      {
        "Name": "DataCleanupJob",
        "ScheduleType": "Advanced",
        "IsEnabled": true,
        "AllowedDays": [ "Monday", "Wednesday", "Friday" ],
        "TimeRestrictions": [
          {
            "DayOfWeek": "Monday",
            "StartTime": "02:00:00",
            "EndTime": "04:00:00"
          },
          {
            "DayOfWeek": "Wednesday",
            "StartTime": "03:00:00",
            "EndTime": "05:00:00"
          },
          {
            "DayOfWeek": "Friday",
            "StartTime": "01:00:00",
            "EndTime": "03:00:00"
          }
        ],
        "StartImmediately": true
      },
      {
        "Name": "HealthMonitorJob",
        "ScheduleType": "Cron",
        "IsEnabled": true,
        "CronExpression": "*/5 * * * *",
        "StartImmediately": true
      }
    ]
  }
}